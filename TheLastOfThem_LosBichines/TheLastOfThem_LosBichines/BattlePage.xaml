    <Page.Resources>
        <Style TargetType="Button" x:Key="GreenButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Image Source="Assets/Images/GreenButton.png"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="{TemplateBinding Name}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="BichinVM" x:DataType="local:VMBichin">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" CanDrag="{Binding Seleccionable}"
                  DragStarting="OnItemDrag">
                <Rectangle Fill="White" Height="65" Width="65"/>
                <Image Source="{x:Bind Imagen}" Width="65"/>
                <Rectangle Fill="Black" Height="65" Width="65" Opacity="0.7" Visibility="{Binding Desbloqueado}"/>
            </Grid>
        </DataTemplate>


        <DataTemplate x:Key="BotonBichin" x:DataType="local:VMBButton">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Fill="White" Height="80" Width="80"/>
                <Image Source="{x:Bind Imagen}" Width="80"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    
    
